	<!-- PLAYER -->
	<append xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvival']/@value">,qs_SorceryIntroNew</append>
	<append xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvivalSP']/@value">,qs_SorceryIntroNew</append>
	<append xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvivalMP']/@value">,qs_SorceryIntroNew</append>
	
	<!-- VEHICLES: Immunity -->
	<append xpath="/entity_classes/entity_class[contains(@name, 'vehicle')]">
		<property name="Buffs" value="buffSorceryImmunity_All"/>
	</append> 

	<!-- TRADERS: Immunity -->
	<append xpath="/entity_classes/entity_class[@name='npcTraderTemplate']">
		<property name="Buffs" value="buffSorceryImmunity_All"/>
	</append>
	
	<!-- TIMID ANIMALS -->
	<append xpath="/entity_classes/entity_class[@name='animalTemplateTimid']">
		<property name="Buffs" value="buffEntity_SorceryManage"/>
	</append> 	
	
	<!-- HOSTILE ANIMALS -->
	<append xpath="/entity_classes/entity_class[@name='animalTemplateHostile']">
		<property name="Buffs" value="buffEntity_SorceryManage"/>
	</append> 	
	
	<!-- MALE ZOMBIE BASE -->
	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']">
		<property name="Buffs" value="buffEntity_SorceryManage"/>
	</append> 
	
	
<!-- ENTITIES -->
